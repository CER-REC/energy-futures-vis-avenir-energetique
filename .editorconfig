# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,css,scss,md}]
charset = utf-8
indent_style = space
indent_size = 2

# For new lines in Bitbucket's markdown
[*.md]
trim_trailing_whitespace = false
