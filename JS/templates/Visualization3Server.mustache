  </div>

  <div class='legendColumn'>
    {{#legendContent}}
      <img src={{img}} class='legendItem'></img>
    {{/legendContent}}
  </div>

  <div id="graphPanel" class="narrowVisualizationColumn">
    <svg id="graphSVG" xmlns="http://www.w3.org/2000/svg" xmlns:xlink='http://www.w3.org/1999/xlink'>
      <style> {{ svgStylesheet }} </style>
      <g id="graphGroup">  </g>
      <g id="timeline"> 
        <g id="timelineAxis"> </g>
        <rect id="timeLineTouch"> </rect>
      </g>
    </svg>
  </div>

  <div class="clearfix"> </div>  

  <div class="centreText"> 
    <p>
      {{description}}
    </p>
    <p>
      {{energyFuturesSource}}
    </p>
    <p>
      {{bitlyLink}}
    </p>
  </div>
  
</div>

